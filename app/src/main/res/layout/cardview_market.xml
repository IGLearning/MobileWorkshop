<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="15dp"
    app:cardBackgroundColor="?attr/colorButtonNormal"
    app:cardCornerRadius="5dp"
    app:cardElevation="1dp">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="10dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/imageView_marketcard_image"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                app:srcCompat="@mipmap/ic_launcher" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/textView_marketcard_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Market"
                    android:textAlignment="center"
                    android:textSize="18sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/textView_marketcard_id"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="ID: XXXOOOXXXX"
                    android:textAlignment="textEnd"
                    android:textStyle="italic" />

                <TextView
                    android:id="@+id/textView_marketcard_price"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Â£0.00"
                    android:textAlignment="textEnd"
                    android:textSize="24sp" />
            </LinearLayout>

        </LinearLayout>
    </LinearLayout>

</android.support.v7.widget.CardView>
